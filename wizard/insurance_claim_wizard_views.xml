<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="insurance_claim_wizard_form" model="ir.ui.view">
            <field name="name">insurance.claim.wizard.form</field>
            <field name="model">insurance.claim.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Insurance Claim">
                    <group>
                        <group>
                            <field name="pos_order_id" readonly="1"/>
                            <field name="patient_id"/>
                            <field name="insurance_provider_id"/>
                            <field name="member_number"/>
                        </group>
                        <group>
                            <field name="preauth_number"/>
                            <field name="preauth_amount"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="copay_percentage" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="patient_copay" readonly="1"/>
                            <field name="insurance_amount" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Create Claim" name="action_create_claim" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_insurance_claim_wizard" model="ir.actions.act_window">
            <field name="name">Create Insurance Claim</field>
            <field name="res_model">insurance.claim.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
