<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sample Insurance Providers -->
        <record id="insurance_provider_nhif" model="insurance.provider">
            <field name="name">National Hospital Insurance Fund (NHIF)</field>
            <field name="code">NHIF</field>
            <field name="provider_type">nhif</field>
            <field name="copay_percentage">10</field>
            <field name="requires_preauth">False</field>
            <field name="claim_submission_method">portal</field>
            <field name="portal_url">https://nhifcare.nhif.or.ke</field>
            <field name="average_processing_days">30</field>
        </record>

        <record id="insurance_provider_aar" model="insurance.provider">
            <field name="name">AAR Insurance</field>
            <field name="code">AAR</field>
            <field name="provider_type">private</field>
            <field name="copay_percentage">20</field>
            <field name="requires_preauth">True</field>
            <field name="preauth_threshold">5000</field>
            <field name="claim_submission_method">portal</field>
            <field name="average_processing_days">14</field>
        </record>

        <record id="insurance_provider_britam" model="insurance.provider">
            <field name="name">Britam Insurance</field>
            <field name="code">BRITAM</field>
            <field name="provider_type">private</field>
            <field name="copay_percentage">15</field>
            <field name="requires_preauth">True</field>
            <field name="preauth_threshold">10000</field>
            <field name="claim_submission_method">email</field>
            <field name="submission_email">claims@britam.com</field>
            <field name="average_processing_days">21</field>
        </record>

    </data>
</odoo>
