<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Pharmacy POS Configuration -->
        <record id="pos_config_pharmacy_main" model="pos.config">
            <field name="name">Pharmacy Main Counter</field>
            <field name="is_pharmacy_pos" eval="True"/>
            <field name="enforce_prescription_check" eval="True"/>
            <field name="require_pharmacist_validation" eval="True"/>
            <field name="enable_expiry_check" eval="True"/>
            <field name="expiry_warning_days">180</field>
            <field name="block_expired_sales" eval="True"/>
            <field name="enforce_lot_selection" eval="True"/>
            <field name="use_fefo_logic" eval="True"/>
        </record>

    </data>
</odoo>
