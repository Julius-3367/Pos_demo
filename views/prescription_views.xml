<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Prescription Tree View -->
        <record id="pharmacy_prescription_tree_view" model="ir.ui.view">
            <field name="name">pharmacy.prescription.tree</field>
            <field name="model">pharmacy.prescription</field>
            <field name="arch" type="xml">
                <list string="Prescriptions" decoration-info="state=='draft'" decoration-success="state=='dispensed'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="patient_id"/>
                    <field name="prescriber_id"/>
                    <field name="total_items"/>
                    <field name="dispensed_items"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state in ['validated', 'dispensed']" decoration-warning="state=='partial'"/>
                </list>
            </field>
        </record>

        <!-- Prescription Form View -->
        <record id="pharmacy_prescription_form_view" model="ir.ui.view">
            <field name="name">pharmacy.prescription.form</field>
            <field name="model">pharmacy.prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <header>
                        <button name="action_validate" string="Validate" type="object" class="oe_highlight" 
                                invisible="state not in ['draft']" groups="pos_demo.group_pharmacist"/>
                        <button name="action_dispense" string="Mark as Dispensed" type="object" class="oe_highlight" 
                                invisible="state not in ['validated','partial']"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft','validated']"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state not in ['cancelled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validated,dispensed"/>
                    </header>
                    <sheet>
                        
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Patient Information">
                                <field name="patient_id" domain="[('is_patient', '=', True)]"/>
                                <field name="patient_age" readonly="1"/>
                                <field name="patient_allergies" readonly="1" invisible="'patient_allergies', '=', False"/>
                            </group>
                            <group string="Prescription Details">
                                <field name="date"/>
                                <field name="prescriber_id" domain="[('is_prescriber', '=', True)]"/>
                                <field name="prescriber_license" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Clinical Information">
                                <field name="diagnosis" placeholder="Diagnosis..."/>
                                <field name="special_instructions" placeholder="Special instructions for dispensing..."/>
                            </group>
                            <group string="Digital Copy">
                                <field name="prescription_image" widget="image" class="oe_avatar"/>
                                <field name="prescription_filename" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription Items" name="items">
                                <field name="line_ids">
                                    <list editable="bottom" decoration-success="fully_dispensed">
                                        <field name="product_id" domain="[('is_pharmaceutical', '=', True)]"/>
                                        <field name="product_generic_name" optional="show"/>
                                        <field name="quantity"/>
                                        <field name="quantity_dispensed"/>
                                        <field name="quantity_remaining"/>
                                        <field name="dosage" placeholder="e.g., 500mg"/>
                                        <field name="frequency" placeholder="e.g., Twice daily"/>
                                        <field name="duration" placeholder="e.g., 7 days"/>
                                        <field name="route"/>
                                        <field name="instructions" optional="hide"/>
                                        <field name="fully_dispensed" invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Validation &amp; Dispensing" name="tracking">
                                <group>
                                    <group string="Validation">
                                        <field name="validated_by" readonly="1"/>
                                        <field name="validation_date" readonly="1"/>
                                    </group>
                                    <group string="Dispensing">
                                        <field name="dispensed_by" readonly="1"/>
                                        <field name="dispensing_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Prescription Kanban View -->
        <record id="pharmacy_prescription_kanban_view" model="ir.ui.view">
            <field name="name">pharmacy.prescription.kanban</field>
            <field name="model">pharmacy.prescription</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="prescriber_id"/>
                    <field name="date"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="patient_id"/>
                                    <br/>
                                    <span>Prescriber: <field name="prescriber_id"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Prescription Search View -->
        <record id="pharmacy_prescription_search_view" model="ir.ui.view">
            <field name="name">pharmacy.prescription.search</field>
            <field name="model">pharmacy.prescription</field>
            <field name="arch" type="xml">
                <search string="Search Prescriptions">
                    <field name="name" string="Prescription Number"/>
                    <field name="patient_id"/>
                    <field name="prescriber_id"/>
                    <separator/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                    <filter name="dispensed" string="Dispensed" domain="[('state', '=', 'dispensed')]"/>
                    <separator/>
                    <filter name="today" string="Today" domain="[('date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter name="this_week" string="This Week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                        <filter name="group_prescriber" string="Prescriber" context="{'group_by': 'prescriber_id'}"/>
                        <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Prescription Action -->
        <record id="action_pharmacy_prescription" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">pharmacy.prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pharmacy_prescription_search_view"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new prescription
                </p>
                <p>
                    Prescriptions allow you to track medication orders from doctors and manage dispensing.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <!-- Pharmacy as standalone top-level app -->
        <menuitem id="menu_pharmacy_root"
                  name="Pharmacy"
                  sequence="10"
                  web_icon="pos_demo,static/description/icon.png"/>

        <menuitem id="menu_pharmacy_prescriptions"
                  name="Prescriptions"
                  parent="menu_pharmacy_root"
                  action="action_pharmacy_prescription"
                  sequence="10"/>

    </data>
</odoo>
