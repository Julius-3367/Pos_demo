<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups -->
        <record id="group_pharmacy_cashier" model="res.groups">
            <field name="name">Pharmacy Cashier</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="comment">Basic POS access for pharmacy cashiers</field>
        </record>

        <record id="group_pharmacy_technician" model="res.groups">
            <field name="name">Pharmacy Technician</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('group_pharmacy_cashier'))]"/>
            <field name="comment">Can manage inventory and assist with prescriptions</field>
        </record>

        <record id="group_pharmacist" model="res.groups">
            <field name="name">Pharmacist</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('group_pharmacy_technician'))]"/>
            <field name="comment">Can validate prescriptions and dispense controlled substances</field>
        </record>

        <record id="group_pharmacy_manager" model="res.groups">
            <field name="name">Pharmacy Manager</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('group_pharmacist'))]"/>
            <field name="comment">Full access to pharmacy operations and reports</field>
        </record>

        <!-- Record Rules -->
        
        <!-- Prescription Access Rules -->
        <record id="rule_prescription_cashier" model="ir.rule">
            <field name="name">Pharmacy Cashier: Read Own Prescriptions</field>
            <field name="model_id" ref="model_pharmacy_prescription"/>
            <field name="groups" eval="[(4, ref('group_pharmacy_cashier'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('dispensed_by', '=', user.id)]</field>
        </record>

        <record id="rule_prescription_technician" model="ir.rule">
            <field name="name">Pharmacy Technician: Manage Prescriptions</field>
            <field name="model_id" ref="model_pharmacy_prescription"/>
            <field name="groups" eval="[(4, ref('group_pharmacy_technician'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_prescription_pharmacist" model="ir.rule">
            <field name="name">Pharmacist: Full Prescription Access</field>
            <field name="model_id" ref="model_pharmacy_prescription"/>
            <field name="groups" eval="[(4, ref('group_pharmacist'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- Controlled Drugs Register Access -->
        <record id="rule_controlled_drugs_pharmacist" model="ir.rule">
            <field name="name">Pharmacist: Controlled Drugs Register Access</field>
            <field name="model_id" ref="model_controlled_drugs_register"/>
            <field name="groups" eval="[(4, ref('group_pharmacist'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_controlled_drugs_manager" model="ir.rule">
            <field name="name">Pharmacy Manager: Full Controlled Drugs Access</field>
            <field name="model_id" ref="model_controlled_drugs_register"/>
            <field name="groups" eval="[(4, ref('group_pharmacy_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- Insurance Claims Access -->
        <record id="rule_insurance_claim_all" model="ir.rule">
            <field name="name">All Users: Read Insurance Claims</field>
            <field name="model_id" ref="model_insurance_claim"/>
            <field name="groups" eval="[(4, ref('group_pharmacy_cashier'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_insurance_claim_manager" model="ir.rule">
            <field name="name">Pharmacy Manager: Manage Insurance Claims</field>
            <field name="model_id" ref="model_insurance_claim"/>
            <field name="groups" eval="[(4, ref('group_pharmacy_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- POS Session Access for Cashiers -->
        <record id="rule_pos_session_cashier" model="ir.rule">
            <field name="name">POS User: Access Own Sessions</field>
            <field name="model_id" ref="point_of_sale.model_pos_session"/>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>
